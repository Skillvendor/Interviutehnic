<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @display.each do |display| %>
      <tr>
        <td><%= display[:title] %></td>
        <td><%= display[:price]  %></td>
        <td><%= display[:quantity]  %></td>
        <td><%= button_to 'Buy', buy_path(id: display[:variant_id]), method: :post, id: "Ajax-button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @display %>

<%= link_to 'New Product', new_product_path %>
