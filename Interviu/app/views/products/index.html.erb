<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Quantity</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @display.each do |display| %>
      <tr>
        <td><%= display["title"] %></td>
        <td><%= display["quantity"]  %></td>
        <td><%= display["price"]  %></td>
        <td><%= button_to 'Buy', buy_path(id: display["variant_id"]), method: :post, id: "Ajax-button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @display %>

